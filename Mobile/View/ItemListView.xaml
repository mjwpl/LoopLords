<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.View.ItemListView"
             xmlns:itemModels="clr-namespace:Mobile.Data.Models"
             xmlns:vm="clr-namespace:Mobile.ViewModel"
             xmlns:strings="clr-namespace:Mobile.Localize"
             Title="{x:Static strings:AppRes.TITLE_TASKS}"
             x:DataType="vm:ItemListViewModel"
             >
    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="itemModels:Item">
                <Border StrokeThickness="1"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 10,10,10,10"
                        Margin="10,10,10,0"
                        >
                    <VerticalStackLayout
                                    VerticalOptions="Center"
                                    Padding="10">
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Description}" />
                    </VerticalStackLayout>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>