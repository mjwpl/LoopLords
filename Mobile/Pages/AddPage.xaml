<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Mobile.Pages.AddPage">

    <VerticalStackLayout Padding="20" BackgroundColor="#141c2b">

        <Label Text="Add new task" FontSize="20" TextColor="White" />

        <Entry Placeholder="Task name" x:Name="NameEntry" TextColor="White" />
        <Entry Placeholder="Days before show" x:Name="HideInDaysEntry" Keyboard="Numeric"  TextColor="White" />

        <Button Text="Add" Clicked="Button_Clicked" />

    </VerticalStackLayout>
</toolkit:Popup>
